<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/assignmentCheckBox"
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:buttonTint="@android:color/holo_green_dark"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/assignmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="-31dp"
            android:layout_toStartOf="@+id/inlineAssignmentEditButton"
            android:layout_toEndOf="@+id/assignmentCheckBox"
            android:text="Line 1"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/assignmentCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assignmentName"
            android:layout_marginStart="30dp"
            android:layout_toStartOf="@+id/inlineAssignmentEditButton"
            android:layout_toEndOf="@+id/assignmentCheckBox"
            android:text="Line 2"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/assignmentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assignmentCourse"
            android:layout_alignStart="@+id/assignmentCourse"
            android:layout_toStartOf="@+id/inlineAssignmentEditButton"
            android:text="Line 3"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/inlineAssignmentEditButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/assignmentCourse"
            android:layout_toStartOf="@+id/inlineAssignmentDeleteButton"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/inline_edit_button" />

        <ImageButton
            android:id="@+id/inlineAssignmentDeleteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/assignmentCourse"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="23dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/inline_delete_button" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>